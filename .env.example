# Kairos Core Configuration
ENVIRONMENT=development
DEBUG=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Database Settings - SQLite for development, Docker services for production
DATABASE_URL=sqlite:///kairos_dev.db

# Neo4j Graph Database (Docker/Production)
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password_here
NEO4J_ENABLED=false

# Qdrant Vector Database (Docker/Production)
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_ENABLED=false

# Redis Cache (Docker/Production)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_ENABLED=false

# Logging Configuration
LOG_LEVEL=INFO

# Security Keys (Generate strong keys for production)
SECRET_KEY=your_strong_secret_key_here
JWT_SECRET=your_jwt_secret_key_here
API_SECRET_KEY=your_api_secret_key_here

# LLM Provider API Keys (Optional - add your keys to enable AI features)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# MCP (Model Context Protocol) Settings
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8001

# Frontend Settings
FRONTEND_PORT=3000

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600
BACKUP_RETENTION_DAYS=7
